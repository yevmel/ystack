From: Yevgeniy Melnichuk <yevgeniy.melnichuk@googlemail.com>
Date: Sat, 17 Jan 2026 22:31:26 +0100
Subject: [PATCH] add frontend libs and tooling

---
 src/main/css/package.json        | 11 +++++++++++
 src/main/css/src/style.scss      |  7 +++++++
 src/main/javascript/package.json | 16 ++++++++++++++++
 src/main/javascript/src/index.js |  1 +
 4 files changed, 35 insertions(+)
 create mode 100644 src/main/css/package.json
 create mode 100644 src/main/css/src/style.scss
 create mode 100644 src/main/javascript/package.json
 create mode 100644 src/main/javascript/src/index.js

diff --git a/src/main/css/package.json b/src/main/css/package.json
new file mode 100644
index 0000000..1f17e83
--- /dev/null
+++ b/src/main/css/package.json
@@ -0,0 +1,11 @@
+{
+  "scripts": {
+    "sass:watch": "sass --load-path=node_modules --watch src/style.scss ../resources/static/style.css"
+  },
+  "dependencies": {
+    "dashvar": "^0.4.x"
+  },
+  "devDependencies": {
+    "sass": "^1.97.x"
+  }
+}
diff --git a/src/main/css/src/style.scss b/src/main/css/src/style.scss
new file mode 100644
index 0000000..5cd417c
--- /dev/null
+++ b/src/main/css/src/style.scss
@@ -0,0 +1,7 @@
+@use "dashvar/dist/base";
+@use "dashvar/dist/dashvar";
+
+html, body {
+    height: 100%;
+}
+
diff --git a/src/main/javascript/package.json b/src/main/javascript/package.json
new file mode 100644
index 0000000..362217a
--- /dev/null
+++ b/src/main/javascript/package.json
@@ -0,0 +1,16 @@
+{
+  "scripts": {
+    "esbuild:watch": "esbuild --watch --legal-comments=none --bundle --outfile=../resources/static/script.js src/index.js",
+    "servce-static-resources": "http-server ../resources/static -c-1 --port 9001"
+  },
+
+  "dependencies": {
+    "htmx.org": "2.0.x",
+    "lit-html": "3.3.x"
+  },
+
+  "devDependencies": {
+    "esbuild": "0.27.x",
+    "http-server": "14.1.x"
+  }
+}
diff --git a/src/main/javascript/src/index.js b/src/main/javascript/src/index.js
new file mode 100644
index 0000000..1cecd1b
--- /dev/null
+++ b/src/main/javascript/src/index.js
@@ -0,0 +1 @@
+import {html, render} from 'lit-html'
